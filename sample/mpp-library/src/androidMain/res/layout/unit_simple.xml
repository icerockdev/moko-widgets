<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="com.icerockdev.library.ItemData"/>

        <variable
            name="text"
            type="String" />

        <variable
            name="number"
            type="int" />

        <variable
            name="obj1"
            type="com.icerockdev.library.ItemData" />

        <variable
            name="obj2"
            type="ItemData" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{text}" />
    </LinearLayout>
</layout>
